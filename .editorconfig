# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.md]
charset = utf-8
indent_style = space
indent_size = 2

# 2 space indentation
[*.{js,ts}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
charset = utf-8
